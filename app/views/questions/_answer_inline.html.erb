<% question.answers.each do |ans| %>
  <% unless ans.new_record? %>
    <p>
    <div class="bg-light p-2">
      <%= ans.body %>
    </div>
    <div class="btn-group btn-group-sm" role="group">
      <%= link_to "Edit this answer" , edit_question_answer_path(question, ans) , class: "btn btn-secondary m-1" %>
        <%= button_to "Destroy this answer" , question_answer_path(question, ans), class: "btn btn-secondary m-1" ,
          method: :delete %>
    </div>
    </p>
  <% end %>
<% end %>